<h2>会員一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.id %>
      </td>
      <td>
        <u><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer),  class: "text-reset" %></u>
      <td>
      <td>
        <%= customer.email %>
      </td>
      <td>
        <% if customer.is_active == true %>
          <p>有効</p>
        <% else %>
          <p>退会</p>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>