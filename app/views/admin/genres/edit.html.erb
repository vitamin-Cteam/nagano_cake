<div class="container py-5">
  <div class="row">
    <div class="col-11 mx-auto">
      <h2>ジャンル編集</h2>

      <!--バリデーション部分-->
      <%= render 'layouts/error', obj: @genre %>

      <!--form部分-->
        <%= form_with model: @genre, url: admin_genre_path,method: :patch do |f| %>
          <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
          <td><%= f.text_field :name, placeholder: "ジャンル名",class: "mr-5" %></td>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
        <% end %>
    </div>
  </div>
</div>