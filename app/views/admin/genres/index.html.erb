<h2>ジャンル一覧・追加</h2>

<!--バリデーション部分-->
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しています。
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--form部分-->
<%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
  <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
  <td><%= f.text_field :name, class: "mr-5" %></td>
  <td><%= f.submit'新規登録',class: "btn btn-success" %></td>
<% end %>

<!--ジャンル一覧-->
<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
    </tr>
  <%end%>
  </tbody>
</table>