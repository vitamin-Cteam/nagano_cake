<%= form_with model: Item.new, url: admin_items_path, method: :post, local: true do |f| %>
  <table>
    <tr>
      <td><%= f.label :商品画像 %></td>
      <td><%= f.file_field :item_image, accept: "image/*" %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :商品名 %></td>
      <td><%= f.text_field :name %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :商品説明 %></td>
      <td><%= f.text_area :description %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :ジャンル %></td>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :税抜価格 %></td>
      <td><%= f.text_field :price %></td>
      <td>円</td>
    </tr>
    <tr>
      <td><%= f.label :販売ステータス %></td>
      <td>
        <%= f.radio_button :is_on_sale, true %>
        <%= f.label :is_on_sale, "販売中" %>
        <%= f.radio_button :is_on_sale, false %>
        <%= f.label :is_on_sale_false, "販売停止" %>
      </td>
    </tr>
  </table>
  <% if item.new_record? %>
    <%= f.submit '新規登録', class: "btn btn-success px-4" %>
  <% else %>
  　<%= f.submit '変更を保存', class: "btn btn-success px-4" %>
  <% end %>
<% end %>