<h3>商品一覧</h3>

<%= link_to '+', new_admin_item_path %>

  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <th><%= item.id %></th>
        <th><%= link_to item.name, admin_item_path(item.id) %></th>
        <th><%= item.price %></th>
        <th><%= item.genre.name %></th>
        <th>
          <% if item.is_on_sale %>
              <p class="text-success"><strong>販売中</strong></p>
            <% elsif %>
              <p class="text-muted"><strong>販売停止</strong></p>
          <% end %>
        </th>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @items %>