<h2><%= "#{@customer.last_name} #{@customer.first_name}さんの注文履歴" %></h2>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><u><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), data: { turbolinks: false }, class: "text-reset" %></u></td>
        <td><%= @customer.last_name %><% @customer.first_name %></td>
        <td><%= calculate_order_amount(order) %></td>
        <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>