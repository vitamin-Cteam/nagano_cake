<div class="container p-3">
  <div class="row">
    <h3>配送先登録/一覧</h3>
  </div>
  <div class="row">
    <%= render 'layouts/error', obj: @address %>
  </div>
  <div class="row">
    <%= render 'form', address: @address %>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td style="width: 10%;"><%= address.postal_code %></td>
            <td style="width: 50%;"><%= address.address %></td>
            <td style="width: 15%;"><%= address.name %></td>
            <td style="width: 25%;">
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-dark" %>
              <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-dark" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>