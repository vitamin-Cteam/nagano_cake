<div class="container">
  <div class="row">
    <h1>配送先登録/一覧</h1>
  </div>
  <div class="row">
    <%#= render 'layouts/error', obj: @address %>
    <%= render 'form', address: @address %>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td class="d-flex">
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %>
          </td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>