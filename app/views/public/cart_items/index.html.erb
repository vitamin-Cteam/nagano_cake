<div class="container">
  <div class="row">
    <h3 class="bg-gray text-left">　ショッピングカート　</h3>
    <%= link_to "カートを空にする", cart_items_destroy_all_path(current_customer), method: :delete, class: "btn btn-danger pull-right"%>
  </div>
  <div class="row">
    <table>
      <thead>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.item_image, size: "50x50" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with model: cart_item, method: :patch do |f| %>
                <%= f.select :amount, *[1..10], selected: cart_item.amount %>
                <%= f.submit "変更", class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
            <% @合計金額 +=  cart_item.subtotal %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <%= link_to "買い物を続ける", items_path, class: "btn btn-primary pull-left" %>
  </div>
  <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success mx-auto" %>
</div>



