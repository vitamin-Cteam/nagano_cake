<div class="container">
  <div class="row mb-2">
    <h3 class="bg-secondary text-left">ショッピングカート</h3>
    <% if @cart_items.exists? %>
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger ml-auto" %>
    <% end %>
  </div>
  <div class="row">
    <% if @cart_items.exists? %>
      <table class="table table-list">
        <thead>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="align-middle">
                <%= link_to item_path(cart_item.item.id), class: "text-decoration-none text-body" do %>
                  <%= image_tag cart_item.item.get_item_image(60, 40) %>
                  <%= cart_item.item.name %>
                <% end %>
              </td>
              <td class="align-middle">¥<%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td class="align-middle">
                <%= form_with model: cart_item, method: :patch do |f| %>
                  <%= f.select :amount, *[1..10], selected: cart_item.amount %>
                  <%= f.submit "変更", class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td class="align-middle">¥<%= cart_item.subtotal.to_s(:delimited) %></td>
              <td class="align-middle"><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>カートに商品はありません</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-4">
      <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
    </div>
    <% if @cart_items.exists? %>
      <div class="col-4 ml-auto">
        <table class="table">
          <tr>
            <td>合計金額</td>
            <td>¥<%= @total_price.floor.to_s(:delimited) %></td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
  <div class="row">
    <% unless @cart_items == nil %>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success mx-auto" %>
    <% end %>
  </div>
</div>



