<div class="col-2">
  <div class="border border-dark text-center">
    <h3 class="mt-3">
      <p style="font-size:18px;">ジャンル検索</p>
      </h3>
  </div>
  <div class="border border-dark text-center">
  <%= form_with url: genre_search_path, method: :get do |f| %>
    <% genre.each do |genre| %>
      <ul class="px-3 py-2 text-left bg-light m-0" style="list-style: none;">
         <li class="mb-1"><strong><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get %></strong></li>
       </ul>
    <% end %>
  <% end %>
  </div>
</div>
