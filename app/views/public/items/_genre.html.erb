<div class="col-2">
  <div class="text-center">
    <h3 class="mt-3">
      <p style="font-size:20px;">ジャンル検索</p>
      </h3>
  </div>
  <div class="text-center">
  <%= form_with url: genre_search_path, method: :get do |f| %>
    <% genre.each do |genre| %>
      <ul class="px-3 py-2 text-center m-0" style="list-style: none;">
         <li class="mb-1"><strong><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get , class: "text-reset" %></strong></li>
       </ul>
    <% end %>
  <% end %>
  </div>
</div>
