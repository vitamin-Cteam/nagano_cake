<div class="container">
  <h1>商品一覧</h1>
  <span>（全<%= @items.count %>件）</span>
  <div class="d-flex flex-wrap">
    <% @items.each do |item| %>
      <%= image_tag item.item_image, size: "200x200" %>
      <p><%= item.name %></p>
      <p><%= number_to_currency(item.price * 1.1, unit: "¥", format: "%u %n" %></p>
    <% end %>
  </div>
  <%= paginate @items %>
</div>