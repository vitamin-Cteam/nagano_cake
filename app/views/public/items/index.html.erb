<div class="container p-3">
  <div class="row">
    <%= render "public/items/genre", genre: @genres %>
    <div class="col-10">
      <div class="row">
        <h3>商品一覧</h3>
        <span class="mt-2">（全<%= @all_items.count %>件）</span>
      </div>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="mx-2 mb-4">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_item_image(180, 120), style: "object-fit: cover; width: 180px; height: 120px;" %>
            <% end %>
            <p><%= item.name %></p>
            <% if item.is_on_sale == true %>
              <p>¥<%= item.with_tax_price.to_s(:delimited) %></p>
            <% else %>
              <p class="font-weight-bold">SOLD OUT</p>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>