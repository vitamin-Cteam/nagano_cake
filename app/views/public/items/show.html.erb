<div class="container">
  <div class="row">
    <div class="col-3">
      <%= image_tag @item.item_image, size: "300x300" %>
    </div>
    <div class="col-5">
      <h2><%= @item.name %></h2>
      <p><%= @item.description %></p>
      <p><%= number_to_currency(@item.price * 1.1, unit: "¥", format: "%u %n" %></p>
      <span>（税込）</span>
      <%= form_with model: CartItem.new do |f| %>
        <%= f.select :amount, *[1..10], { prompt: '個数選択' } %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる", class: "btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
</div>